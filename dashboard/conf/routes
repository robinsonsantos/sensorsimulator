# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# User
GET     /users                      controllers.Application.readUsers()
GET     /users/:id                  controllers.Application.readUser(id: Long)
POST    /users                      controllers.Application.createUser()
PUT     /users/:id                  controllers.Application.updateUser(id: Long)
DELETE  /users/:id                  controllers.Application.deleteUser(id: Long)

# Device
POST    /devices                    controllers.Application.createDevice()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
