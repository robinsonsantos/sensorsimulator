# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# User
GET     /api/v1/users               controllers.Application.readUsers()
GET     /api/v1/users/:id           controllers.Application.readUser(id: Long)
POST    /api/v1/users               controllers.Application.createUser()
PUT     /api/v1/users/:id           controllers.Application.updateUser(id: Long)
DELETE  /api/v1/users/:id           controllers.Application.deleteUser(id: Long)

# Device
GET     /devices                    controllers.Devices.index()
GET     /api/v1/devices             controllers.Devices.readDevices()
POST    /api/v1/devices             controllers.Devices.createDevice()

# Record
GET     /records                    controllers.Application.readRecords()
POST    /records                    controllers.Application.createRecord()

# Graphic
GET     /graphics                   controllers.Graphics.index()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
