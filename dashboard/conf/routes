# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# User
GET     /api/v1/users               controllers.Application.readUsers()
GET     /api/v1/users/:id           controllers.Application.readUser(id: Long)
POST    /api/v1/users               controllers.Application.createUser()
PUT     /api/v1/users/:id           controllers.Application.updateUser(id: Long)
DELETE  /api/v1/users/:id           controllers.Application.deleteUser(id: Long)

# Device
GET     /devices                    controllers.Application.readDevices()
POST    /devices                    controllers.Application.createDevice()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
